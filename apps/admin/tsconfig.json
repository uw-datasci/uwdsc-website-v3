{
  "extends": "@uwdsc/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": "../..",
    "paths": {
      "@/*": ["apps/admin/*"],
      "@uwdsc/ui": ["packages/ui/src/index.ts"],
      "@uwdsc/core": ["packages/server/core/src/index.ts"],
      "@uwdsc/admin": ["packages/server/admin/src/index.ts"],
      "@uwdsc/db": ["packages/server/db/src/config/supabase.ts"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
