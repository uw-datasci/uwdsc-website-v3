{
  "extends": "@uwdsc/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": "../..",
    "noImplicitAny": false,
    "paths": {
      "@/*": ["apps/web/*"],
      "@uwdsc/common/types": ["packages/common/src/types/index.ts"],
      "@uwdsc/ui": ["packages/ui/src/index.ts"],
      "@uwdsc/core": ["packages/server/core/src/index.ts"],
      "@uwdsc/db": ["packages/server/db/src/config/supabase.ts"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "types/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next", ".turbo", ".vercel"]
}
